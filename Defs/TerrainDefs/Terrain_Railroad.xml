<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <TerrainDef Abstract="True" Name="RailroadBallastBase">
        <layerable>true</layerable>
        <affordances>
            <li>Light</li>
            <li>Medium</li>
            <li>Heavy</li>
            <li>Walkable</li>
        </affordances>
        <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
        <tags>
            <li>Rail</li>
            <li>Road</li>
        </tags>
        <renderPrecedence>370</renderPrecedence>
        <description>Track ballast forms the trackbed upon which railroad ties (sleepers) are laid.</description>
        <texturePath>Terrain/Surfaces/RailroadBallast</texturePath>
        <pollutionShaderType MayRequire="Ludeon.RimWorld.Biotech">TerrainFadeRoughLinearBurn</pollutionShaderType>
        <pollutionOverlayTexturePath>Terrain/Surfaces/PollutionFloorSmooth</pollutionOverlayTexturePath>
        <pollutionColor>(1, 1, 1, 1)</pollutionColor>
        <isPaintable>true</isPaintable>
        <edgeType>FadeRough</edgeType>
        <statBases>
            <WorkToBuild>100</WorkToBuild>
            <Beauty>-1</Beauty>
            <Cleanliness>-2</Cleanliness>
        </statBases>
        <drawStyleCategory>Floors</drawStyleCategory>
        <designatorDropdown>Floor_RailroadBallast</designatorDropdown>
        <designationCategory>RailroadCategory</designationCategory>
        <fertility>0</fertility>
        <constructEffect>ConstructDirt</constructEffect>
        <!-- <uiOrder>2070</uiOrder> -->
        <scatterType>Rocky</scatterType>
        <researchPrerequisites>
            <li>Research_Vehicles_Trains_Steam</li>
        </researchPrerequisites>
    </TerrainDef>

    <TerrainDef ParentName="RailroadBallastBase">
        <defName>RailroadBallastSandstone</defName>
        <label>sandstone railroad ballast</label>
        <color>(126,104,94)</color>
        <costList>
